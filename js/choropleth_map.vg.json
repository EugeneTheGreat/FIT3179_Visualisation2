{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Percentage Distribution of Ranked Universities Across Countries From 2011 to 2023",
    "fontSize": 16
  },
  "width": 1150,
  "height": 520,
  "projection": { "type": "equalEarth" },
  "params": [
    {
      "name": "year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2011,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": { "type": "topojson", "feature": "oceans" }
      },
      "mark": { "type": "geoshape", "fill": "skyblue" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/js/ne_110m_graticules_30.topojson",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray",
        "strokeWidth": 0.9
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.6
      },
      "encoding": {
        "tooltip": { "field": "note" }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/data/country_uni_counts_merged.csv"
      },
      "transform": [
        {
          "lookup": "location",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/js/ne_110m.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "calculate": "datum.percentage",
          "as": "Distribution Percentage"
        },
        {
          "calculate": "datum.percentage + '%'",
          "as": "dist_percentage"
        },
        { "filter": "datum.year == year_selection" }
      ],
      "params": [
        {
          "name": "hover_area",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "Distribution Percentage",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [0.1, 1.75, 3.5, 5.25, 7.0],
            "range": [
              "#b7e4c7",
              "#74c69d",
              "#52b788",
              "#40916c",
              "#2d6a4f",
              "#22543f"
            ]
          },
          "legend": {
            "titleFontSize": 14,
            "labelFont": "Poppins",
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "location",
            "type": "nominal",
            "title": "Country",
            "format": {
              "font": "Poppins"
            }
          },
          {
            "field": "dist_percentage",
            "type": "nominal",
            "title": "Percentage",
            "format": {
              "font": "Poppins"
            }
          }
        ],
        "stroke": {
          "condition": {
            "param": "hover_area",
            "empty": false,
            "value": "black"
          },
          "value": "white"
        },
        "strokeWidth": {
          "condition": {
            "param": "hover_area",
            "empty": false,
            "value": 1.5
          },
          "value": 0.6
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/js/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/data/country_info.csv"
            },
            "key": "name",
            "fields": ["latitude", "longitude"]
          }
        }
      ],
      "mark": {
        "type": "text",
        "font": "Poppins",
        "color": "#1f1f1f"
      },
      "encoding": {
        "longitude": { "field": "longitude", "type": "quantitative" },
        "latitude": { "field": "latitude", "type": "quantitative" },
        "text": { "field": "properties.NAME", "type": "nominal" },
        "opacity": {
          "condition": {
            "test": "datum['properties.NAME'] == 'China' || datum['properties.NAME'] == 'Brazil' || datum['properties.NAME'] == 'Australia' || datum['properties.NAME'] == 'Malaysia' ||  datum['properties.NAME'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
