{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 820,
  "height": 820,
  "background": {
    "expr": "rgb(250, 250, 248)"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/data/corr_heat.csv"
  },
  "title": {
    "text": "Correlation Between Parameters Over The Years",
    "fontSize": 16
  },
  "encoding": {
    "x": {
      "field": "Score1",
      "type": "nominal",
      "axis": {
        "title": "",
        "labelAngle": -35,
        "labelFont": "Poppins",
        "labelFontSize": 12
      },
      "sort": null
    },
    "y": {
      "field": "Score2",
      "type": "nominal",
      "axis": {
        "title": "",
        "labelFont": "Poppins",
        "labelFontSize": 12
      },
      "sort": null
    }
  },
  "layer": [
    {
      "mark": {
        "type": "rect",
        "stroke": "white"
      },
      "params": [
        {
          "name": "hover_area",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Correlation",
          "type": "quantitative",
          "title": "Correlation",
          "legend": {
            "direction": "vertical",
            "gradientLength": 120,
            "titleFontSize": 14,
            "labelFont": "Poppins",
            "labelFontSize": 12
          },
          "scale": {
            "type": "threshold",
            "domain": [-1, -0.5, 0, 0.5, 1],
            "range": [
              "#d43d51",
              "#e67f83",
              "#f0b8b8",
              "#aab3c5",
              "#657a9a",
              "#164571"
            ]
          }
        },
        "strokeWidth": {
          "condition": {
            "param": "hover_area",
            "empty": false,
            "value": 4
          },
          "value": 1
        },
        "tooltip": [
          {
            "field": "Score1",
            "type": "nominal",
            "title": "Parameter 1",
            "format": {
              "font": "Poppins"
            }
          },
          {
            "field": "Score2",
            "type": "nominal",
            "title": "Parameter 2",
            "format": {
              "font": "Poppins"
            }
          },
          {
            "field": "Correlation",
            "type": "quantitative",
            "title": "Correlation",
            "format": {
              "font": "Poppins"
            }
          }
        ]
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {
          "field": "Correlation",
          "type": "quantitative",
          "format": {
            "font": "Poppins"
          }
        },
        "tooltip": [
          {
            "field": "Score1",
            "type": "nominal",
            "title": "Parameter 1",
            "format": {
              "font": "Poppins"
            }
          },
          {
            "field": "Score2",
            "type": "nominal",
            "title": "Parameter 2",
            "format": {
              "font": "Poppins"
            }
          },
          {
            "field": "Correlation",
            "type": "quantitative",
            "title": "Correlation",
            "format": {
              "font": "Poppins"
            }
          }
        ]
      }
    }
  ],
  "config": {
    "axis": { "grid": true, "tickBand": "extent" }
  }
}
