{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 820,
  "height": 820,
  "data": {
    "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/data/corr_heat.csv"
  },
  "title": "Correlation Between Parameters Over The Years",
  "encoding": {
    "x": {
      "field": "Score1",
      "type": "nominal",
      "axis": {
        "title": "",
        "labelAngle": -35,
        "labelFontSize": 11
      },
      "sort": null
    },
    "y": {
      "field": "Score2",
      "type": "nominal",
      "axis": {
        "title": "",
        "labelFontSize": 11
      },
      "sort": null
    }
  },
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "color": {
          "field": "Correlation",
          "type": "quantitative",
          "title": "Correlation",
          "legend": {
            "direction": "horizontal",
            "gradientLength": 120
          },
          "scale": {
            "type": "threshold",
            "domain": [-1, -0.5, 0, 0.5, 1],
            "range": ["#d43d51", "#e67f83", "#f0b8b8", "#aab3c5", "#657a9a", "#164571"]
          }
        }
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {
          "field": "Correlation",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {
    "axis": { "grid": true, "tickBand": "extent" }
  }
}
