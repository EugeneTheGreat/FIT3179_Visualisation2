{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Ranking of World Universities",
      "fontSize": 16
    },
    "width": 320,
    "height": 650,
    "description": "Ranking of World Universities",
    "data": {
      "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/data/rankings_cleaned_merged.csv",
      "format": {
          "type": "csv",
          "parse": {"rank": "number"}
      }
    },
    "params": [
      { "name": "Year_Selection", 
        "value": 2023, 
        "bind": {
          "input": "range", 
          "min": 2011, 
          "max": 2023, 
          "step": 1, 
          "name": "Select Year: " 
      }}
    ],
    "transform": [
        {"filter": "datum.year == Year_Selection"},
        {"filter": {"field": "rank", "range":[76, 100]}}
    ],
    "encoding": {
      "x": {
        "field": "rank",
        "type": "quantitative",
        "axis": {
          "title": "University Ranking",
          "titleFontSize": 14,
          "labelFont": "Poppins",
          "labelFontSize": 12
        }
      },
      "y": {
        "field": "name",
        "type": "nominal",
        "sort": "x",
        "axis": {
          "title": "University Name",
          "titleFontSize": 14,
          "labelFont": "Poppins",
          "labelFontSize": 12
        }
      }
    },
    "layer": [
      {
        "mark": "rule",
        "encoding": {
          "size": {"value": 4},
          "color": {
            "value": "#164571"
          },
          "tooltip": [
            { "field" : "name", "type" : "nominal", "title": "University" },
            { "field" : "location", "type" : "nominal", "title": "Location" },
            { "field" : "rank", "type" : "quantitative", "title": "Ranking" }
          ]
       }
      },
      {
        "mark": "circle",
        "encoding": {
          "size": {"value": 300},
          "color": {
            "value": "#164571"
          },
          "opacity": {"value": 1},
          "tooltip": [
            { "field" : "name", "type" : "nominal", "title": "University" },
            { "field" : "location", "type" : "nominal", "title": "Location" },
            { "field" : "rank", "type" : "quantitative", "title": "Ranking" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 30,
          "fontSize": 12,
          "font": "Poppins",
          "fontWeight": "bold"
        },
        "encoding": {
          "text": { "field": "rank", "type": "quantitative" },
          "opacity": {
            "condition": {
              "test": "datum.rank == '1' || datum.rank == '2' || datum.rank == '3' || datum.rank == '198' || datum.rank == '199' || datum.rank == '200'",
              "value": 1
            },
            "value": 0
          }
        }
      }
    ]
  }