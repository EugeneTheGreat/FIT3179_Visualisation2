{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/EugeneTheGreat/FIT3179_Visualisation2/main/data/rankings_cleaned_merged_continents.csv"
  },
  "title": {
    "text": "Continents' Distribution of University Ranking Over The Years",
    "fontSize": 16
  },
  "background": {
    "expr": "rgb(250, 250, 248)"
  },
  "width": 600,
  "height": 450,
  "params": [
    {
      "name": "Year_Selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2011,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "Continent_Selection",
      "value": "Asia",
      "bind": {
        "input": "select",
        "options": [
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "labels": [
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "Oceania",
          "South America"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.year == Year_Selection"
    },
    {
      "filter": "datum.Continent == Continent_Selection"
    }
  ],
  "encoding": {
    "x": {
      "bin": {
        "step": 10
      },
      "field": "rank",
      "type": "ordinal",
      "axis": {
        "title": "University Ranking (Binned)",
        "titleFontSize": 14,
        "labelFont": "Poppins",
        "labelFontSize": 12
      }
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "axis": {
        "title": "Frequency",
        "titleFontSize": 14,
        "labelFont": "Poppins",
        "labelFontSize": 12
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar"
      },
      "params": [
        {
          "name": "hover_area",
          "select": {
            "type": "point",
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "encoding": {
        "tooltip": [
          { "field": "Continent", "type": "nominal", "title": "Continent" },
          { "aggregate": "count", "type": "quantitative", "title": "Frequency" }
        ],
        "stroke": {
          "condition": {
            "param": "hover_area",
            "empty": false,
            "value": "white"
          },
          "value": null
        },
        "color": {
          "condition": [
            {
              "test": "datum['Continent'] == 'Africa'",
              "value": "#937cb0"
            },
            {
              "test": "datum['Continent'] == 'Asia'",
              "value": "#493D30"
            },
            {
              "test": "datum['Continent'] == 'Europe'",
              "value": "#6e994a"
            },
            {
              "test": "datum['Continent'] == 'North America'",
              "value": "#be9759"
            },
            {
              "test": "datum['Continent'] == 'Oceania'",
              "value": "#164571"
            },
            {
              "test": "datum['Continent'] == 'South America'",
              "value": "#F8A488"
            }
          ],
          "value": "#164571"
        }
      }
    }
  ]
}
